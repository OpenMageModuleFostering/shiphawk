<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <shiphawk translate="label" module="shiphawk_order">
            <label><![CDATA[<div style="position: absolute; display: flex; align-items: center;"><img id="shiphawk_block" style="width:18px; margin-right: 5px;" src="" alt="" border="0" />ShipHawk</div>&nbsp;<script>$('shiphawk_block').src = SKIN_URL + "images/shiphawk/shiphawkicon.png";</script>]]></label>
            <sort_order>999999</sort_order>
        </shiphawk>
    </tabs>
    <sections>
        <shiphawk translate="label" module="shiphawk_order">
            <label>Shiphawk Settings</label>
            <tab>shiphawk</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <order translate="label">
                    <label>ShipHawk</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Order Sync</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shiphawk_order/source_ordersync</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <api_key translate="label">
                            <label>Api Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                        <gateway_url translate="label">
                            <label>Gateway Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shiphawk_order/source_gateway</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gateway_url>
                        <register translate="label">
                            <label>Register on ShipHawk.com</label>
                            <link><![CDATA[https://shiphawk.com/reg/?p=basic&utm_medium=product&utm_source=magento&utm_campaign=connectpage]]></link>
                            <frontend_type>text</frontend_type>
                            <frontend_model>shiphawk_order/system_link</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </register>
                    </fields>
                </order>
            </groups>
        </shiphawk>
    </sections>
</config>